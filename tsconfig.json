    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "dom"
    ],

    "skipLibCheck": true,

    "sourceMap": true,
    "declaration": true,

    "outDir": "dist/",
    "declarationDir": "dist/"
  },
  "include": [
